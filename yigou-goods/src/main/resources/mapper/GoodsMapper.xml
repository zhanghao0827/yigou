<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yigou.goods.mapper.GoodsMapper">

    <select id="getAllGood" resultType="Goods">
        select * from tb_goods where is_marketable=#{isMarketable} and is_delete=0;
    </select>

    <select id="getGoodsById" resultType="Goods">
        select * from tb_goods where id=#{id};
    </select>

</mapper>